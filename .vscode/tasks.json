{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "taskName": "Build",
         "command": "make clean; make;",
         "type": "shell",
         "problemMatcher":
         {
            "owner": "cpp",
            "pattern":[
               {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
               }
            ]
         }
      },
      {
         "taskName": "Build and Run",
         "command": "make clean; make; ./bin/game",
         "type": "shell",
         "group":
         {
            "kind": "build",
            "isDefault": true
         },
         "problemMatcher":
         {
            "owner": "cpp",
            "pattern":[
               {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
               }
            ]
         }
      },
      {
         "taskName": "Run",
         "command": "./bin/game",
         "type": "shell"
      }
   ]
}